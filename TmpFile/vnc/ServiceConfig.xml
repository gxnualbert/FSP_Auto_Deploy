<!--
    XXX.XXX.XXX.XXX     IceGrid Master节点的IP
    xxxx                IceGrid Master节点的端口
    YYY.YYY.YYY.YYY     IceGrid Replica节点的IP
    yyyy                IceGrid Replica节点的端口
    vnc_instance_id     VNC Service实例ID
    vnc_instance_passwd VNC Service实例密码

    AAA.AAA.AAA.AAA     Manager Service实例的IP
    aaaa                Manager Service实例的端口
    BBB.BBB.BBB.BBB     VNC Service/Adaptor实例的IP
    bbbb                VNC Service/Adaptor实例的端口

    注意：VNC Service/Adaptor需要配置TCP/UDP两个地址
--><Root>
    <NATIPList>
        <NATIP/>
    </NATIPList>

    <!--日志保存天数-->
    <LogSaveDays>15</LogSaveDays>

    <ICEServer>
        <!--对应IceGrid MasterRegistry-->
        <DBServer>192.168.7.105</DBServer>
        <DBPort>10000</DBPort>
    </ICEServer>
    <ICEServer>
        <!--对应IceGrid BackupRegistry-->
        <DBServer>192.168.7.106</DBServer>
        <DBPort>10001</DBPort>
    </ICEServer>

    <ProcessList>
        <ServiceProcess>
            <ProcessName>service</ProcessName>
            <ListenList>
                <Listen>
                    <Addr>0</Addr>
                    <Protocol>TCP</Protocol>
                    <Port>1089</Port>
                </Listen>
                <Listen>
                    <Addr>0</Addr>
                    <Protocol>UDP</Protocol>
                    <Port>1089</Port>
                </Listen>
            </ListenList>

            <Service>
                <Guid>{0CE5960D-0D77-454a-917D-EE22166B3F52}</Guid>
                <Name>vnc_service</Name>
                <Priority>3</Priority>
                <ApplicationID>12</ApplicationID>
                <Config>
                    <!-- 实例分组ID（0：非主实例组；1：主实例组-->
                    <InstanceGroupID>1</InstanceGroupID>
                    <ManagerServiceIPv4Addr>TCP:192.168.7.105:1089</ManagerServiceIPv4Addr>
                    <ServiceAddress>TCP:192.168.7.108:1091;UDP:192.168.7.108:1091</ServiceAddress>
                    <AdaptorAddress>TCP:192.168.7.108:1091;UDP:192.168.7.108:1091</AdaptorAddress>
                    <ServiceInstanceID>vnc_instance_1</ServiceInstanceID>
                    <ServiceInstancePassword>vnc_instance_fsp</ServiceInstancePassword>

                    <!-- 与manager_service的连接断开后的重连间隔（单位：毫秒）-->
                    <ReconnectionInterval>1000</ReconnectionInterval>
                    <!-- 系统负载信息上报时间间隔（单位：毫秒）-->
                    <ReportingStateInterval>10000</ReportingStateInterval>
                    <!-- 流量过载阈值（单位：kb/s -->
                    <FlowrateOverloadThreshold>1024000</FlowrateOverloadThreshold>
                </Config>
            </Service>

            <Service>
                <Guid>{FE9AEDDB-D11E-481E-9B94-697D28E0E9FF}</Guid>
                <Name>vnc_adaptor</Name>
                <Priority>4</Priority>
                <ApplicationID>11</ApplicationID>
                <Config>
                    <!-- VNC Service连接信息 -->
                    <ServiceAddress>TCP:192.168.7.108:1091;UDP:192.168.7.108:1091</ServiceAddress>
                </Config>
            </Service>

        </ServiceProcess>
    </ProcessList>
</Root>