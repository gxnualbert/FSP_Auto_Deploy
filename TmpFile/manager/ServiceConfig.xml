<!--
    XXX.XXX.XXX.XXX     IceGrid Master节点的IP
    xxxx                IceGrid Master节点的端口
    YYY.YYY.YYY.YYY     IceGrid Replica节点的IP
    yyyy                IceGrid Replica节点的端口
--><Root>
    <NATIPList>
        <NATIP/>
    </NATIPList>

    <!--日志保存天数-->
    <LogSaveDays>15</LogSaveDays>

    <ICEServer>
        <!--对应IceGrid MasterRegistry-->
        <DBServer>192.168.7.105</DBServer>
        <DBPort>10000</DBPort>
    </ICEServer>
    <ICEServer>
        <!--对应IceGrid BackupRegistry-->
        <DBServer>192.168.7.106</DBServer>
        <DBPort>10001</DBPort>
    </ICEServer>

    <ProcessList>
        <ServiceProcess>
            <ProcessName>service</ProcessName>
            <ListenList>
                <Listen>
                    <Addr>0</Addr>
                    <Protocol>TCP</Protocol>
                    <Port>1089</Port>
                </Listen>
                <Listen>
                    <Addr>0</Addr>
                    <Protocol>UDP</Protocol>
                    <Port>1089</Port>
                </Listen>
            </ListenList>

            <Service>
                <Guid>{EA7F06DD-273C-4BA2-B49F-1880DBEF0C99}</Guid>
                <Name>manager_service</Name>
                <Priority>3</Priority>
                <ApplicationID>100</ApplicationID>
                <Config>
                    <!-- 业务心跳发送时间间隔（单位：毫秒） -->
                    <BusinessHeartbeatInterval>10000</BusinessHeartbeatInterval>
                    <!-- 业务心跳超时时间（单位：毫秒） -->
                    <BusinessHeartbeatTimeout>3000</BusinessHeartbeatTimeout>
                </Config>
            </Service>

        </ServiceProcess>
    </ProcessList>
</Root>